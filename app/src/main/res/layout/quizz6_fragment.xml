<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Quizz6Fragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/userProfilePic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="Marisol"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/userProfilePic"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/customProgress"
            style="@style/CustomProgressBar"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:max="100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customProgress">

            <TextView
                android:id="@+id/txtQuestion2Answer18"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_rounded_shape_purple_stroke"
                android:gravity="center"
                android:text="Algunos días"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/txtQuestion2Answer1"
                app:layout_constraintStart_toStartOf="@+id/txtQuestion2Answer1"
                app:layout_constraintTop_toBottomOf="@+id/txtQuestion2Answer1" />

            <TextView
                android:id="@+id/txtQuestion2Answer19"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/white_rounded_shape_purple_stroke"
                android:gravity="center"
                android:text="Casi todos los días"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/txtQuestion2Answer2"
                app:layout_constraintStart_toStartOf="@+id/txtQuestion2Answer2"
                app:layout_constraintTop_toTopOf="@+id/txtQuestion2Answer13" />

            <TextView
                android:id="@+id/txtQuestionOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/white_rounded_shape"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="¿Cómo fluyen tus días?"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtQuestion1Answer1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_rounded_shape_purple_stroke"
                android:gravity="center"
                android:text="Sin problema, todo sale generalmente bien."
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/txtQuestionOne"
                app:layout_constraintStart_toStartOf="@+id/txtQuestionOne"
                app:layout_constraintTop_toBottomOf="@+id/txtQuestionOne" />

            <TextView
                android:id="@+id/txtQuestion1Answer2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/white_rounded_shape_purple_stroke"
                android:gravity="center"
                android:text="A veces bien, en otros momentos es un caos."
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/txtQuestion1Answer"
                app:layout_constraintStart_toStartOf="@+id/txtQuestion1Answer"
                app:layout_constraintTop_toBottomOf="@+id/txtQuestion1Answer" />

            <TextView
                android:id="@+id/txtQuestion1Answer"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/white_rounded_shape_purple_stroke"
                android:gravity="center"
                android:text="Todo es un caos, nada sale bien."
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/txtQuestion1Answer1"
                app:layout_constraintStart_toStartOf="@+id/txtQuestion1Answer1"
                app:layout_constraintTop_toBottomOf="@+id/txtQuestion1Answer1" />

            <TextView
                android:id="@+id/txtQuestionTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/white_rounded_shape"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Durante las dos semanas anteriores, ¿qué tan seguido te sentiste triste, deprimido o sin esperanza?"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtQuestion1Answer2" />

            <TextView
                android:id="@+id/txtQuestionTwo2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/white_rounded_shape"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Durante las dos semanas anteriores, ¿qué tan seguido te sentiste cansado o con muy poca energía?"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtQuestion2Answer13" />

            <TextView
                android:id="@+id/txtQuestion2Answer2"
                android:layout_width="166dp"
                android:layout_height="30dp"
                android:background="@drawable/white_rounded_shape_purple_stroke"
                android:gravity="center"
                android:text="La mitad de los días"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/txtQuestionTwo2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txtQuestion2Answer20"
                app:layout_constraintTop_toTopOf="@+id/txtQuestion2Answer22" />

            <TextView
                android:id="@+id/txtQuestion2Answer21"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/white_rounded_shape_purple_stroke"
                android:gravity="center"
                android:text="La mitad de los días"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/txtQuestionTwo"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txtQuestion2Answer1"
                app:layout_constraintTop_toTopOf="@+id/txtQuestion2Answer1" />

            <TextView
                android:id="@+id/txtQuestion2Answer13"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_rounded_shape_purple_stroke"
                android:gravity="center"
                android:text="Algunos días"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/txtQuestion2Answer1"
                app:layout_constraintStart_toStartOf="@+id/txtQuestion2Answer1"
                app:layout_constraintTop_toBottomOf="@+id/txtQuestion2Answer1" />

            <TextView
                android:id="@+id/txtQuestion2Answer15"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/white_rounded_shape_purple_stroke"
                android:gravity="center"
                android:text="Casi todos los días"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/txtQuestion2Answer2"
                app:layout_constraintStart_toStartOf="@+id/txtQuestion2Answer2"
                app:layout_constraintTop_toTopOf="@+id/txtQuestion2Answer13" />

            <TextView
                android:id="@+id/txtQuestion2Answer1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/white_rounded_shape_purple_stroke"
                android:gravity="center"
                android:text="Nunca"
                android:textSize="16dp"
                app:layout_constraintEnd_toStartOf="@+id/txtQuestion2Answer2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@+id/txtQuestionTwo"
                app:layout_constraintTop_toBottomOf="@+id/txtQuestionTwo" />

            <TextView
                android:id="@+id/txtQuestion2Answer20"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/white_rounded_shape_purple_stroke"
                android:gravity="center"
                android:text="Algunos días"
                android:textSize="16dp"
                app:layout_constraintEnd_toStartOf="@+id/txtQuestion2Answer2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/txtQuestionTwo2"
                app:layout_constraintTop_toBottomOf="@+id/txtQuestion2Answer22" />

            <TextView
                android:id="@+id/txtQuestion2Answer23"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/white_rounded_shape_purple_stroke"
                android:gravity="center"
                android:text="Casi todos los días"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/txtQuestion2Answer2"
                app:layout_constraintStart_toStartOf="@+id/txtQuestion2Answer2"
                app:layout_constraintTop_toTopOf="@+id/txtQuestion2Answer20" />

            <TextView
                android:id="@+id/txtQuestion2Answer22"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/white_rounded_shape_purple_stroke"
                android:gravity="center"
                android:text="Nunca"
                android:textSize="16dp"
                app:layout_constraintEnd_toStartOf="@+id/txtQuestion2Answer2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/txtQuestionTwo2"
                app:layout_constraintTop_toBottomOf="@+id/txtQuestionTwo2" />

            <Button
                android:id="@+id/button8"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/pink_shape_button"
                android:text="siguiente"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>